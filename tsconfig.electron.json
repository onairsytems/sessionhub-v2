{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "./dist",
    "lib": [
      "es2020"
    ],
    "skipDefaultLibCheck": true,
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "electron"
    ]
  },
  "include": [
    "main/**/*",
    "electron/**/*"
  ],
  "exclude": [
    "node_modules",
    "renderer",
    "app",
    "components",
    ".next"
  ]
}